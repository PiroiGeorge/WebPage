    <h2><a href="#Galerie-Statica">Galerie</a></h2>
    <div id="grid-galerie">
        <% var oraCurenta = new Date().getHours(); %>
        <% for (let imag of locals.imagini) { %>
            <% imag.timp.forEach(interval => { %>
                <% var oraInceput = parseInt(interval.split(':')[0]); %>
                <% var oraSfarsit = parseInt(interval.split(':')[1]); %>
                <% if (oraCurenta >= oraInceput && oraCurenta < oraSfarsit) { %>
                    <figure>
                        <img src="<%= imag.fisier %>" alt="<%= imag.descriere %>">
                        <figcaption><%= imag.descriere %></figcaption>
                    </figure>
                <% } %>
            <% }); %>
        <% } %>
    </div>
</section>

